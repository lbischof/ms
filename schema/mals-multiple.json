{
    "properties": {
        "partial": {
            "type": "string",
            "enum": ["mals-multiple"],
            "options": {
                "hidden": true
            }
        },
        "product": {
            "type": "string",
            "title": "Product"
        },
        "hide": {
            "type": "boolean",
            "title": "Hide",
            "format": "checkbox"
        },
        "banner": {
            "type": "boolean",
            "title": "Banner",
            "format": "checkbox"
        },
        "text_colour": {
            "type": "string",
            "title": "Text colour"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea"
        },
        "colours": {
            "type": "array",
            "title": "Colours",
            "options": {
                "collapsed": true
            },
            "items": {
                "headerTemplate": "{{self.name}}",
                "type": "object",
                "format": "grid",
                "options": {
                    "disable_properties": false,
                    "collapsed": true
                },
                "properties": {
                    "hide": {
                        "type": "boolean",
                        "format": "checkbox"
                    },
                    "name": { "type": "string" },
                    "gauge": { "type": "string" },
                    "usage": { "type": "string" },
                    "text_colour": { "type": "string" }
                },
                "required": ["name"],
                "defaultProperties": ["name","hide"]
            }
        },
        "radios": {
            "type": "array",
            "title": "Radios",
            "options": {
                "collapsed": true
            },
            "items": {
                "headerTemplate": "{{self.name}} : {{self.price}}",
                "type": "object",
                "format": "grid",
                "options": {
                    "collapsed": true
                },
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "Name"
                    },
                    "price": {
                        "type": "number",
                        "title": "Price"
                    }

                }
            }
        }
    },
    "type": "object",
    "options": {
        "keep_oneof_values": false
    }
}
