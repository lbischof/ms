{
    "type": "object",
    "id": "arr_item",
    "properties": {
        "partial": {
            "type": "string",
            "enum": ["mals-multiple"],
            "options": {
                "hidden": true
            }
        },
        "product": {
            "type": "string",
            "title": "Product",
            "description": "This appears in the shopping cart"
        },
        "hide": {
            "type": "boolean",
            "title": "Hide",
            "format": "checkbox"
        },
        "banner": {
            "type": "boolean",
            "title": "Banner",
            "format": "checkbox"
        },
        "textboxes": {
            "type": "boolean",
            "title": "Textboxes",
            "format": "checkbox"
        },
        "images": {
            "type": "boolean",
            "title": "Images",
            "format": "checkbox",
            "default": true
        },
        "text_colour": {
            "type": "string",
            "title": "Text colour",
            "format": "color"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea",
            "watch": {
                "product": "arr_item.product"
            },
            "links": [{
                "rel": "Upload new images for this product",
                "href": "https://github.com/lbischof/ms/upload/source/source/images/wool/{{product|sanitize}}"
            }]
        },
        "colours": {
            "type": "array",
            "title": "Colours",
            "options": {
                "collapsed": true
            },
            "items": {
                "headerTemplate": "{{self.name}} {{if self.hide}}(hidden){{/if}}",
                "type": "object",
                "options": {
                    "disable_properties": false,
                    "collapsed": true
                },
                "properties": {
                    "hide": {
                        "type": "boolean",
                        "format": "checkbox"
                    },
                    "name": {
                        "type": "string",
                        "watch": {
                            "product": "arr_item.product",
                            "images": "arr_item.images"
                        },
                        "links": [{
                            "href": "{{if images}}https://raw.githubusercontent.com/lbischof/ms/source/source/images/wool/{{product|sanitize}}/{{self|sanitize}}.jpg{{/if}}",
                            "mediaType": "image/jpeg"
                        }]
                    },
                    "gauge": { "type": "string" },
                    "usage": { "type": "string" },
                    "text_colour": {
                        "type": "string",
                        "format": "color"
                    }
                },
                "required": ["name"],
                "defaultProperties": ["name","hide"]
            }
        },
        "radios": {
            "type": "array",
            "title": "Radios",
            "options": {
                "collapsed": true
            },
            "items": {
                "headerTemplate": "{{self.name}} : {{self.price}}",
                "type": "object",
                "options": {
                    "collapsed": true
                },
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "Name"
                    },
                    "price": {
                        "type": "number",
                        "title": "Price"
                    }

                }
            }
        }
    }
}
